<Window x:Class="ThinkMine.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="ThinkMine" Height="600" Width="800"
        WindowStyle="None" ResizeMode="CanResize"
        Background="Transparent"
        AllowsTransparency="True"
        WindowStartupLocation="CenterScreen"
        PreviewKeyDown="Window_PreviewKeyDown"
        MouseDown="Window_MouseDown"
        Loaded="Window_Loaded"
        SizeChanged="Window_SizeChanged"
        Closing="Window_Closing">

    <Window.Resources>
        <Style x:Key="TinyControlStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="8,0,0,0"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Opacity" Value="0.7"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="TinyControlBorderStyle" TargetType="Border">
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="8,0,0,0"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Opacity" Value="0.7"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <DropShadowEffect x:Key="ShadowEffect" BlurRadius="10" ShadowDepth="2" Direction="270" Color="#20000000" Opacity="0.5"/>
        
        <!-- Vector Icons -->
        <Geometry x:Key="Icon_MiniMode">M19,13H13V19H11V11H19V13Z M5,11H13V5H11V9H5V11Z</Geometry>
        <Geometry x:Key="Icon_FullScreen">M5,5H11V7H7V11H5V5Z M19,5V11H17V7H13V5H19Z M19,19H13V17H17V13H19V19Z M5,19V13H7V17H11V19H5V19Z</Geometry>
        <Geometry x:Key="Icon_Copy">M19,21H8V7H19M19,5H8A2,2 0 0,0 6,7V21A2,2 0 0,0 8,23H19A2,2 0 0,0 21,21V7A2,2 0 0,0 19,5M16,1H4A2,2 0 0,0 2,3V17H4V3H16V1Z</Geometry>
        <Geometry x:Key="Icon_Pin_Outline">M16,12V4H17V2H7V4H8V12L6,14V16H11.2V22H12.8V16H18V14L16,12Z</Geometry>
        <Geometry x:Key="Icon_Pin_Filled">M16,12V4H17V2H7V4H8V12L6,14V16H11.2V22H12.8V16H18V14L16,12Z</Geometry>
        <Geometry x:Key="Icon_Library">M4,2H20A2,2 0 0,1 22,4V20A2,2 0 0,1 20,22H4A2,2 0 0,1 2,20V4A2,2 0 0,1 4,2M4,4V20H20V4H4M6,6H10V10H6V6M12,6H18V8H12V6M12,10H18V12H12V10M6,12H10V16H6V12M12,14H18V16H12V14M6,18H18V19H6V18Z</Geometry>
    </Window.Resources>


    <Grid>
        <!-- Main Background Layer (Sibling to Content) -->
        <Border x:Name="MainBackground" Background="White" CornerRadius="0" MouseDown="Window_MouseDown"/>

        <!-- Content Layer -->
        <Grid>
            <!-- Placeholder -->
            <TextBlock x:Name="PlaceholderText"
                       Text="Just write..."
                       FontSize="18"
                       Foreground="#A0A0A0"
                       IsHitTestVisible="False"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Opacity="0.5"
                       Visibility="Collapsed"/>

            <!-- Main Text Area -->
            <RichTextBox x:Name="MainEditor"
                         BorderThickness="0"
                         Padding="48"
                         AcceptsReturn="True"
                         AcceptsTab="True"
                         VerticalScrollBarVisibility="Auto"
                         FontSize="18"
                         FontFamily="Segoe UI"
                         Background="{x:Null}"
                         PreviewMouseRightButtonUp="Window_PreviewMouseRightButtonUp">
                <RichTextBox.Resources>
                    <Style TargetType="{x:Type Paragraph}">
                        <Setter Property="Margin" Value="0"/>
                    </Style>
                </RichTextBox.Resources>
            </RichTextBox>

            <!-- Top Left: Library Button -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="16,16,0,0">
                <Border x:Name="LibraryBtn" Style="{StaticResource TinyControlBorderStyle}" MouseLeftButtonDown="LibraryBtn_Click" ToolTip="Library" Margin="0" Background="Transparent">
                    <TextBlock Text="Library" FontSize="14" Foreground="#555" FontWeight="SemiBold"/>
                </Border>
            </StackPanel>

            <!-- Top Right Controls -->
            <StackPanel x:Name="TopControls" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,16,16,0">
        
                <!-- Mini Mode Button -->
                <Border x:Name="MiniModeBtn" Style="{StaticResource TinyControlBorderStyle}" MouseLeftButtonDown="MiniModeBtn_Click" ToolTip="Mini Mode" Margin="0,0,16,0" Background="Transparent">
                    <Path Data="{StaticResource Icon_MiniMode}" Fill="Black" Width="14" Height="14" Stretch="Uniform"/>
                </Border>

                <!-- Alignment Button -->
                <TextBlock x:Name="AlignBtn"
                           Text="L" 
                           Style="{StaticResource TinyControlStyle}"
                           MouseLeftButtonDown="AlignBtn_Click"
                           PreviewMouseRightButtonUp="AlignBtn_RightClick"
                           ToolTip="Alignment"
                           Margin="0,0,8,0"/>

                <!-- Font Button (Text) -->
                <TextBlock x:Name="FontBtn"
                           Text="Inter" 
                           Style="{StaticResource TinyControlStyle}"
                           MouseLeftButtonDown="FontBtn_Click"
                           PreviewMouseRightButtonUp="FontBtn_RightClick"
                           ToolTip="Change Font"
                           Margin="0,0,8,0"
                           Width="140"
                           TextAlignment="Center"
                           TextTrimming="CharacterEllipsis"/>

                <!-- Font Size Button -->
                <TextBlock x:Name="FontSizeBtn"
                           Text="18"
                           Style="{StaticResource TinyControlStyle}"
                           MouseLeftButtonDown="FontSizeBtn_Click"
                           PreviewMouseRightButtonUp="FontSizeBtn_RightClick"
                           ToolTip="Left: Decrease | Right: Increase"
                           Margin="0,0,16,0"/>

                <!-- Bold Button -->
                <TextBlock x:Name="BoldBtn"
                           Text="B"
                           FontWeight="Bold"
                           Style="{StaticResource TinyControlStyle}"
                           MouseLeftButtonDown="BoldBtn_Click"
                           ToolTip="Toggle Bold"
                           Margin="0,0,16,0"/>

                <!-- Italic Button -->
                <TextBlock x:Name="ItalicBtn"
                           Text="I"
                           FontStyle="Italic"
                           Style="{StaticResource TinyControlStyle}"
                           MouseLeftButtonDown="ItalicBtn_Click"
                           ToolTip="Toggle Italic"
                           Margin="0,0,16,0"/>

                <!-- Timer -->
                <StackPanel Orientation="Horizontal" Margin="0,0,16,0" VerticalAlignment="Center">
                    <TextBlock x:Name="TimerDisplay"
                               Text="05:00"
                               Style="{StaticResource TinyControlStyle}"
                               MouseLeftButtonDown="Timer_Click"
                               ToolTip="Click to Start/Pause | Right-Click to Reset"
                               Margin="0,0,0,0"/>
                    
                    <TextBox x:Name="TimerEdit"
                             Visibility="Collapsed"
                             FontSize="14"
                             Foreground="#888"
                             Width="50"
                             BorderThickness="0"
                             Background="Transparent"
                             KeyDown="TimerEdit_KeyDown"
                             LostFocus="TimerEdit_LostFocus"
                             Margin="8,0,0,0"/>
                </StackPanel>

                <!-- Window Controls -->
                <StackPanel Orientation="Horizontal" Margin="16,0,0,0">
                    <TextBlock Text="_" 
                               Style="{StaticResource TinyControlStyle}"
                               MouseLeftButtonDown="MinBtn_Click"
                               ToolTip="Minimize" Margin="0,0,8,0"/>
                    <TextBlock Text="[ ]" 
                               Style="{StaticResource TinyControlStyle}"
                               MouseLeftButtonDown="MaxBtn_Click"
                               ToolTip="Maximize/Restore" Margin="0,0,8,0"/>
                    <TextBlock Text="X" 
                               Style="{StaticResource TinyControlStyle}"
                               MouseLeftButtonDown="CloseBtn_Click"
                               ToolTip="Close" Margin="0,0,0,0"/>
                </StackPanel>
            </StackPanel>

            <!-- Bottom Right: Date/Time & Logo -->
            <StackPanel x:Name="BottomInfoPanel" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,24,24">
                <TextBlock x:Name="DateTimeDisplay" 
                           Text="Monday, Nov 25 | 11:45 AM" 
                           FontSize="12" 
                           Foreground="#888" 
                           VerticalAlignment="Center" 
                           Margin="0,0,16,0"/>
                <TextBlock Text="ThinkMine" 
                           FontSize="14" 
                           FontWeight="Bold" 
                           Foreground="#333" 
                           VerticalAlignment="Center"/>
            </StackPanel>

            <!-- Library Overlay (Slide-out) -->
            <Grid x:Name="LibraryOverlay" Visibility="Collapsed" Background="#FAFAFA" HorizontalAlignment="Left" Width="300" VerticalAlignment="Stretch">
                <Grid.Effect>
                    <DropShadowEffect BlurRadius="15" ShadowDepth="5" Direction="0" Color="#20000000" Opacity="0.4"/>
                </Grid.Effect>
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/> <!-- Header -->
                        <RowDefinition Height="*"/>    <!-- List -->
                        <RowDefinition Height="Auto"/> <!-- Footer -->
                    </Grid.RowDefinitions>

                    <!-- Header -->
                    <Grid Grid.Row="0" Margin="0,0,0,20">
                        <TextBlock Text="Library" FontSize="24" FontWeight="Bold"/>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                             <!-- New File Button -->
                            <Border Cursor="Hand" MouseLeftButtonDown="LibraryNew_Click" Background="Transparent" Padding="5" Margin="0,0,10,0" ToolTip="New File">
                                <TextBlock Text="+" FontSize="24" FontWeight="Light" Foreground="#555" VerticalAlignment="Center"/>
                            </Border>
                            <TextBlock Text="X" FontSize="18" Cursor="Hand" MouseLeftButtonDown="LibraryClose_Click" Foreground="#999"/>
                        </StackPanel>
                    </Grid>

                    <!-- Recent Files List -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <StackPanel x:Name="RecentFilesList">
                            <!-- Items will be added dynamically -->
                            <TextBlock Text="No recent files" Foreground="#999" FontStyle="Italic" Margin="0,10"/>
                        </StackPanel>
                    </ScrollViewer>

                    <!-- Footer Actions -->
                    <Grid Grid.Row="2" Margin="0,20,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- Open Button -->
                        <Button Content="Open" Click="LibraryOpen_Click" HorizontalAlignment="Left" Padding="15,8" Background="Transparent" BorderBrush="#DDD" BorderThickness="1"/>

                        <!-- Save Button -->
                        <Button Content="Save" Click="LibrarySave_Click" Grid.Column="1" HorizontalAlignment="Right" Padding="15,8" Background="#333" Foreground="White" BorderThickness="0">
                            <Button.ContextMenu>
                                <ContextMenu>
                                    <MenuItem Header="Save" Click="LibrarySaveAction_Click"/>
                                    <MenuItem Header="Save As..." Click="LibrarySaveAsAction_Click"/>
                                </ContextMenu>
                            </Button.ContextMenu>
                        </Button>
                    </Grid>
                </Grid>
            </Grid>



            
            <!-- Docker Overlay (Mini Mode) -->
            <Grid x:Name="DockerOverlay" Visibility="Collapsed" Background="Transparent">
                <!-- Drawer Container -->
                <Grid VerticalAlignment="Top" HorizontalAlignment="Center" Width="350">
                    <Grid.RenderTransform>
                        <TranslateTransform x:Name="DockerTransform" Y="0"/>
                    </Grid.RenderTransform>
                    
                    <StackPanel>
                        <!-- Main Docker Content -->
                        <Border x:Name="DockerContent" Background="#F5F5F5" CornerRadius="0,0,8,8" Margin="0">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="10" ShadowDepth="2" Color="#20000000" Opacity="0.3"/>
                            </Border.Effect>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                
                                <!-- Docker Header -->
                                <Grid Grid.Row="0" Margin="10">
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                                        <Path Data="{StaticResource Icon_Pin_Filled}" Fill="#555" Width="12" Height="12" Margin="0,0,5,0"/>
                                        <TextBlock Text="ThinkMine Docker" FontWeight="Bold" Foreground="#555"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                        <!-- Update Button (Hidden) -->
                                        <Border x:Name="UpdateBtn" Cursor="Hand" MouseLeftButtonDown="UpdateBtn_Click" ToolTip="New Update Available!" Margin="0,0,10,0" Background="Transparent" Visibility="Collapsed">
                                            <Path Data="M12,2A10,10 0 0,0 2,12A10,10 0 0,0 12,22A10,10 0 0,0 22,12A10,10 0 0,0 12,2M12,4A8,8 0 0,1 20,12A8,8 0 0,1 12,20A8,8 0 0,1 4,12A8,8 0 0,1 12,4M11,16.5L18,9.5L16.59,8.09L11,13.67L7.91,10.59L6.5,12L11,16.5Z" Fill="#00AA00" Width="14" Height="14" Stretch="Uniform"/>
                                        </Border>
                                        <!-- Copy Button -->
                                        <Border Cursor="Hand" MouseLeftButtonDown="CopyBtn_Click" ToolTip="Smart Copy" Margin="0,0,10,0" Background="Transparent">
                                            <Path Data="{StaticResource Icon_Copy}" Fill="#555" Width="14" Height="14" Stretch="Uniform"/>
                                        </Border>
                                        <!-- Fullscreen Button -->
                                        <Border Cursor="Hand" MouseLeftButtonDown="FullScreenBtn_Click" ToolTip="Restore Full Mode" Margin="0,0,10,0" Background="Transparent">
                                            <Path Data="{StaticResource Icon_FullScreen}" Fill="#555" Width="14" Height="14" Stretch="Uniform"/>
                                        </Border>
                                        <!-- Minimize Button -->
                                        <TextBlock Text="_" Cursor="Hand" MouseLeftButtonDown="MinBtn_Click" ToolTip="Minimize" Margin="0,0,10,0" Foreground="#555" FontWeight="Bold"/>
                                        <!-- Close Button -->
                                        <TextBlock Text="X" Cursor="Hand" MouseLeftButtonDown="CloseBtn_Click" ToolTip="Close" Foreground="#555" FontWeight="Bold"/>
                                    </StackPanel>
                                </Grid>
                                
                                <!-- Docker Content Preview -->
                                <TextBlock x:Name="DockerPreviewText" 
                                           Grid.Row="1" 
                                           Text="Start writing..." 
                                           TextWrapping="Wrap" 
                                           Margin="15,0,15,15" 
                                           Foreground="#333"
                                           TextTrimming="CharacterEllipsis"
                                           TextAlignment="Center"/>
                                           
                                <!-- Opacity Slider -->
                                <Slider x:Name="OpacitySlider" 
                                        Grid.Row="1" 
                                        VerticalAlignment="Bottom" 
                                        Margin="50,0,50,5" 
                                        Minimum="0.2" 
                                        Maximum="1.0" 
                                        Value="1.0" 
                                        ValueChanged="OpacitySlider_ValueChanged"
                                        ToolTip="Adjust Opacity"/>
                            </Grid>
                        </Border>
                        
                        <!-- Pull Tab (Toggle Button) -->
                        <Border x:Name="DockerTab" 
                                Background="#E0E0E0" 
                                CornerRadius="0,0,8,8" 
                                HorizontalAlignment="Center" 
                                Width="60" 
                                Height="20" 
                                Cursor="Hand" 
                                MouseLeftButtonDown="DockerTab_Click"
                                ToolTip="Toggle Docker Drawer">
                            <TextBlock x:Name="DockerTabIcon" Text="^" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold" Foreground="#555"/>
                        </Border>
                    </StackPanel>
                </Grid>
            </Grid>

            <!-- Welcome Overlay (Onboarding) -->
            <Grid x:Name="WelcomeOverlay" Visibility="Collapsed" Background="White" MouseLeftButtonDown="WelcomeOverlay_Click">
                <TextBlock x:Name="WelcomeText" 
                           Text="" 
                           FontSize="32" 
                           FontWeight="Light" 
                           Foreground="#333" 
                           HorizontalAlignment="Center" 
                           VerticalAlignment="Center"
                           IsHitTestVisible="False"/>
                <TextBlock Text="Click anywhere to start" 
                           FontSize="14" 
                           Foreground="#999" 
                           HorizontalAlignment="Center" 
                           VerticalAlignment="Bottom" 
                           Margin="0,0,0,50"
                           Opacity="0.5"/>
            </Grid>

            <!-- Tutorial Overlay -->
            <Grid x:Name="TutorialOverlay" Visibility="Collapsed" Background="#80FFFFFF">
                <!-- Instruction Panel -->
                <Border Background="White" 
                        BorderBrush="#DDD" 
                        BorderThickness="1" 
                        CornerRadius="8" 
                        Padding="20" 
                        Width="300" 
                        HorizontalAlignment="Center" 
                        VerticalAlignment="Center">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="20" ShadowDepth="5" Color="#20000000" Opacity="0.3"/>
                    </Border.Effect>
                    <StackPanel>
                        <TextBlock x:Name="TutorialTitle" Text="Welcome to ThinkMine" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>
                        <TextBlock x:Name="TutorialInstruction" Text="Let's take a quick tour of the features." TextWrapping="Wrap" FontSize="14" Foreground="#555" Margin="0,0,0,20"/>
                        
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                            <Button x:Name="TutorialSkipBtn" Content="Skip" Click="TutorialSkip_Click" Background="Transparent" BorderThickness="0" Foreground="#999" Margin="0,0,10,0" Cursor="Hand"/>
                            <Button x:Name="TutorialNextBtn" Content="Next" Click="TutorialNext_Click" Background="#333" Foreground="White" Padding="15,8" BorderThickness="0" Cursor="Hand">
                                <Button.Resources>
                                    <Style TargetType="Border">
                                        <Setter Property="CornerRadius" Value="4"/>
                                    </Style>
                                </Button.Resources>
                            </Button>
                        </StackPanel>
                        </StackPanel>


                </Border>
                
                <!-- Spotlight Highlight -->
                <Border x:Name="TutorialSpotlight" 
                        BorderBrush="#4CAF50" 
                        BorderThickness="3" 
                        CornerRadius="4" 
                        Visibility="Collapsed" 
                        HorizontalAlignment="Left" 
                        VerticalAlignment="Top"
                        IsHitTestVisible="False">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="10" Color="#4CAF50" Opacity="0.5"/>
                    </Border.Effect>
                </Border>
            </Grid>

            <!-- Unsaved Changes Overlay (Highest Priority) -->
            <Grid x:Name="UnsavedOverlay" Visibility="Collapsed" Background="#CCFFFFFF">
                <Border Background="White" BorderBrush="#DDD" BorderThickness="1" CornerRadius="8" Padding="20" Width="300" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="20" ShadowDepth="5" Color="#20000000" Opacity="0.3"/>
                    </Border.Effect>
                    <StackPanel>
                        <TextBlock Text="Unsaved Changes" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>
                        <TextBlock Text="You have unsaved changes. Do you want to save them before continuing?" TextWrapping="Wrap" FontSize="14" Foreground="#555" Margin="0,0,0,20"/>
                        
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                            <Button Content="Cancel" Click="OverlayCancel_Click" Background="Transparent" BorderThickness="0" Foreground="#999" Margin="0,0,10,0" Cursor="Hand"/>
                            <Button Content="Don't Save" Click="OverlayDontSave_Click" Background="Transparent" BorderThickness="0" Foreground="#D32F2F" Margin="0,0,10,0" Cursor="Hand"/>
                            <Button Content="Save" Click="OverlaySave_Click" Background="#333" Foreground="White" Padding="15,8" BorderThickness="0" Cursor="Hand">
                                <Button.Resources>
                                    <Style TargetType="Border">
                                        <Setter Property="CornerRadius" Value="4"/>
                                    </Style>
                                </Button.Resources>
                            </Button>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </Grid>

        </Grid>
    </Grid>
</Window>
